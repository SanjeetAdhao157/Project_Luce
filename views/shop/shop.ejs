    <title>Luce</title>
  </head>

  <div class="relative">
  <nav
  class="w-full h-[12%] bg-[#F7F7F7] flex items-center py-5 px-4 md:px-20 font-['Montserrat'] text-[#393E46]">
 <!-- Logo and Icon -->
 <div class="w-1/4 flex items-center justify-between md:justify-start">
  <!-- Luce text for larger screens -->
  <span class="text-2xl md:text-3xl font-['Raleway'] hidden md:block">Luce</span>
  <!-- Icon for smaller screens -->
  <i class="fa-solid fa-gem text-[#393E46] text-2xl md:hidden"></i>
</div>

<!-- Navigation Links -->
<div class="w-1/2 flex justify-center">
  <ul class="flex gap-6 items-center text-base md:text-lg">
    <li><a class="nounderline hover:overline" href="/">Home</a></li>
    <li><a class="nounderline hover:overline" href="/shop">Shop</a></li>
    <li><a class="nounderline hover:overline" href="/About">About</a></li>
  </ul>
</div>

<!-- Icons and Account Menu -->
<div class="w-1/4 flex items-center justify-end gap-6">
  <a href="/cart">
    <span class="material-symbols-outlined text-xl md:text-2xl hover:text-red-400">
      shopping_bag
    </span>
  </a>
  <button class="group relative">
    <span class="material-symbols-outlined text-xl md:text-2xl">
      account_circle
    </span>
    <div
      class="bg-[#393E46] text-[#F7F7F7] py-2 rounded-lg px-4 flex flex-col absolute opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-opacity duration-200"
    >
      <% if(!currentUser) { %>
      <a class="py-1 hover:overline" href="/signup">Signup</a>
      <a class="py-1 hover:overline" href="/login">Login</a>
      <% } %> <% if(currentUser) { %>
      <a class="py-1 hover:overline" href="/logout">Logout</a>
      <% } %>
    </div>
  </button>
</div>
</nav>

 
<% if(success && success.length){ %>

  <div id="flashMessage" class="flex items-center justify-between bg-green-100 border-2 text-lg text-green-400 ml-[20%]  w-1/2 py-2 px-4 rounded-md">
    <span><%= success %></span>
    <button id="closeFlash" class="text-green-400 hover:text-green-600">
      <i class="fa fa-times"></i>
    </button>
  </div>

<% } %>
<% if(error && error.length){ %>

  <div id="flashMessage" class="flex items-center justify-between bg-red-100 border-2 text-lg text-red-400 ml-[20%]  w-1/2 py-2 px-4 rounded-md">
    <span><%= error %></span>
    <button id="closeFlash" class="text-red-400 hover:text-red-600">
      <i class="fa fa-times"></i>
    </button>
  </div>

<% } %>

<script>
  document.getElementById('closeFlash').addEventListener('click', function() {
    document.getElementById('flashMessage').style.display = 'none';
  });
</script>


  <body>
    <div class="w-full h-full bg-[#F7F7F7] font-['Montserrat'] text-[#393E46] ">
      <div class="w-full h-auto px-5 py-4 mt-4 flex flex-col items-start gap-4 md:flex-row md:items-center md:gap-10 md:h-[5%] md:px-10">
        <a class="text-sm hover:overline md:text-lg" href="/shop">All Category</a>
        <a class="text-sm hover:overline md:text-lg" href="/shop/category/shoes">Shoes</a>
        <a class="text-sm hover:overline md:text-lg" href="/shop/category/bags">Bags</a>
        <a class="text-sm hover:overline md:text-lg" href="/shop/category/watches">Watches</a>
      </div>
      
      <div class="flex flex-col md:flex-row md:items-center md:gap-4 md:px-5">
        <!-- Mobile view: SORT BY, FILTER, and List Your Product on the same line -->
        <div class="flex flex-row items-center justify-between w-full md:hidden pl-4">
          <div class="flex gap-2">
            <a href="/" class="py-1 px-2 bg-[#393E46] text-white rounded-full text-xs">SORT BY</a>
            <a href="" class="py-1 px-2 bg-[#393E46] text-white rounded-full text-xs">FILTER</a>
          </div>
          <a href="/create" class="text-white py-1 px-2 bg-[#393E46] rounded-lg text-xs mr-3">List Your Product</a>
        </div>
      
        <!-- Desktop view: SORT BY, FILTER, and List Your Product -->
        <div class="hidden md:flex md:ml-auto md:gap-4">
          <a href="/" class="py-2 px-3 bg-[#393E46] text-white rounded-full text-center text-sm">Sort by</a>
          <a href="" class="py-2 px-3 bg-[#393E46] text-white rounded-full text-center text-sm">Filter</a>
          <a href="/create" class="text-white py-2 px-4 bg-[#393E46] rounded-lg text-sm">List Your Product</a>
        </div>
      </div>
      
      

          
      <div class="p-10 flex flex-wrap gap-10 w-full md:justify-start justify-center">
        <% product.forEach(ele => { %>
          <a class="relative h-80 w-64" href="/shop/<%=ele._id%>">
            <% if (ele.discount > 0) { %>
              <span class="h-8 w-8 rounded-full left-[85%] top-[2%] bg-[#393E46] text-white text-xs absolute flex justify-center items-center">
                -<%= ele.discount %>%
              </span>
            <% } %>
            <div class="h-[75%] w-full bg-[#EEEEEE] flex justify-center items-center">
              <img class="object-fit w-[98%] h-[98%]" src="<%=ele.image.url%>" alt="">
            </div>
            <h2 class="w-full text-center py-2 px-1 tracking-tight text-sm"><%=ele.name%></h2>
            <h3 class="w-full text-center font-semibold">&#8377; <%=ele.price%></h3>
          </a>
        <% }) %>
      </div>
      
      </div>

<hr class="w-[100%] text-center mb-2">



<footer>
  <div class="bg-[#EEEEEE] p-10 flex flex-col lg:flex-row items-center justify-evenly">
    <div class="flex flex-col items-center lg:items-start text-center lg:text-left h-full mb-7 lg:mb-0">
      <h1 class="font-semibold text-3xl mb-5">Luce</h1>
      <p class="text-sm">COPYRIGHT &copy; 2024 WPRING. ALL RIGHTS RESERVED</p>
    </div>

    <div class="flex flex-col items-center lg:items-start mb-5 lg:mb-0">
      <span class="mb-2">Order History</span>
      <span class="mb-2">My Account</span>
      <span class="mb-2">About</span>
      <span class="mb-2">Contact Us</span>
    </div>

    <div class="flex flex-col items-center lg:items-start mb-5 lg:mb-0">
      <a class="mb-2 hover:text-red-400 flex items-center" href="">
        <i class="fa-brands fa-facebook mr-2" style="color: #000000"></i> Facebook
      </a>
      <a class="mb-2 hover:text-red-400 flex items-center" href="">
        <i class="fa-brands fa-pinterest mr-2" style="color: #000000"></i> Instagram
      </a>
      <a class="mb-2 hover:text-red-400 flex items-center" href="">
        <i class="fa-brands fa-instagram mr-2" style="color: #000000"></i> Pinterest
      </a>
      <a class="mb-2 hover:text-red-400 flex items-center" href="">
        <i class="fa-brands fa-youtube mr-2" style="color: #000000"></i> Youtube
      </a>
    </div>

    <div class="w-full lg:w-[30%] flex flex-col items-center">
      <p class="mb-5 text-sm text-center">
        Sign up for our newsletter to get the latest news, announcements, and specials
      </p>
      <div class="flex justify-center border-b-2 w-full">
        <input
          class="bg-[#EEEEEE] outline-none text-center lg:text-left w-full"
          type="text"
          placeholder="ENTER YOUR EMAIL"
        />
        <button>
          <span class="font-[Limelight] text-lg"> SUBSCRIBE</span>
        </button>
      </div>
    </div>
  </div>
</footer>

      
</div>

  </body>
</div>
</html>
