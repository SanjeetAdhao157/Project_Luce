<% layout("/layouts/boilerplate") %>

<div class="h-[70%] w-full bg-[#EEEEEE] pt-[10%] px-4 md:px-0">
  <form class="flex flex-col items-center text-lg required:border-red-500" action="/login" method="post">
    <input
      class="w-full md:w-1/2 py-3 px-4 mt-4 rounded-lg"
      type="text"
      placeholder="Enter Username"
      required
      name="username"
    />

    <input
      class="w-full md:w-1/2 py-3 px-4 mt-4 rounded-lg mb-6"
      type="password"
      placeholder="Enter password"
      required
      name="password"
    />

    <button class="py-2 px-6 rounded-full bg-[#393E46] text-white">
      Login
    </button>
  </form>
</div>

<hr class="w-full mt-2">
